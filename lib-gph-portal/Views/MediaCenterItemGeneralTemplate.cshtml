@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    Layout = "_InnerPagesLayout.cshtml";
}
@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
    var CurrentDocumentType = Umbraco.AssignedContentItem;
    var CurrentLanguage = CurrentDocumentType.GetCultureFromDomains();

    var CurrentMediaCenterArray = CurrentDocumentType.Children().ToArray();
    var LatestNewsTitle = CurrentLanguage == "ar-SA" ? $"أخر {Umbraco.AssignedContentItem.Name}" : $"Latest {Umbraco.AssignedContentItem.Name}";
    var SearchAboutNews = CurrentLanguage == "ar-SA" ? $"بحث عن {Umbraco.AssignedContentItem.Name}" : $"Search About {Umbraco.AssignedContentItem.Name}";
    var Search = CurrentLanguage == "ar-SA" ? "بحث ..." : "Search ...";
    var ReadMore = CurrentLanguage == "ar-SA" ? "للمزيد من التفاصيل" : "More Details";

    var CurrentType = CurrentDocumentType.GetType().ToString().Split('.').Last().ToString();
    var ChildrenType = CurrentDocumentType.Children().First().GetType().ToString().Split('.').Last().ToString();
    var AllLatestNews = Model.Root().ChildrenOfType("mediaCenter").FirstOrDefault().ChildrenOfType(CurrentType).FirstOrDefault().Children().ToArray();


    var pageSize = AllLatestNews.Length >= 3 ? 3 : AllLatestNews.Length;

    var LatestNews = AllLatestNews.OrderByDescending(x => x.SortOrder).ToArray();

    int PaginationCounter = (LatestNews.Length != 0) ? LatestNews.Length % pageSize == 0 ? LatestNews.Length / pageSize : (LatestNews.Length / pageSize) + 1 : 0;



}




<section class="wrapper blog section-bg">
    @using (Ajax.BeginForm("GetNewsSearchResult", "MediaCenterItems", null, new AjaxOptions
    {
        UpdateTargetId = "updatedContainer",
        HttpMethod = "POST",
        InsertionMode = InsertionMode.ReplaceWith

    }))
    {
        <input type="hidden" value="@CurrentLanguage" name="CurrentLanguage" />
        <input type="hidden" value="@CurrentType" name="CurrentType" />
        <input type="hidden" value="@pageSize" name="pageSize" />
        <input type="hidden" value="@ChildrenType" name="ChildrenType" />
        <div class="container">
            <div class="row">
                <div class="col-md-12 sidebar">
                    <h3 class="sidebar-title">@SearchAboutNews</h3>
                    <div class="sidebar-item recent-posts">
                        <div class="sidebar-item search-form">


                            <input type="text" name="SearchTarget" id="searchinput" placeholder="@Search">
                            <button class="btn-close-search" type="submit" id="removeSearch"><i class="lni lni-close"></i> </button>
                            <button type="submit"><i class="lni lni-search-alt"></i></button>


                        </div>
                        <!-- End sidebar search form-->
                    </div>

                </div>
            </div>
            @*<button type="submit" id="removeSearch"><i class="lni lni-trash"></i></button>*@

            <div id="updatedContainer" class="row ">
                @for (int i = 0; i < pageSize; i++)
                {
                    <div class="col-md-4">
                        <div class="card text-white card-has-bg click-col"
                             style="background-image:url('@ImageUrl(LatestNews[i])');">

                            <div class="card-img-overlay d-flex flex-column">
                                <div class="card-body">

                                    <h4 class="card-title mt-0 ">
                                        <a class="text-white" herf="#">
                                            @(LatestNews[i].Value<string>("title"))

                                        </a>
                                    </h4>
                                    <small>
                                        <i class="far fa-clock"></i>
                                        @GetDate(LatestNews[i], "date")
                                    </small>

                                </div>
                                <div class="card-footer">
                                    <div class="media">

                                        <div class="media-body">
                                            <a class="my-0 text-white d-block anchor-link" href="@(LatestNews[i]?.Url())">
                                                @ReadMore
                                                <i class="lni lni-chevron-left"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }




                <div class="blog-pagination raw col-12" id="pagination">
                    <ul class="justify-content-center">

                        @for (int i = 0; i < PaginationCounter; i++)
                        {
                            <li><button name="CurrentPageNumber" type="submit" value="@i">@(i+1)</button></li>

                        }

                    </ul>
                </div>
            </div>
        </div>
    }
</section>

<script>
    $("#removeSearch").click(function () {
        $('#searchinput').val('');
    });
</script>


@functions{

    //Get Image
    public string ImageUrl(IPublishedContent Element)
    {
        string ImageURL;
        if (Element.HasValue("image"))

        {
            try
            {
                ImageURL = Element.Value<MediaWithCrops>("image").Url();

            }
            catch (Exception)
            {

                ImageURL = "#";
            }

        }
        else
        {
            ImageURL = "#";

        }


        return ImageURL;
    }


    //Getting Date
    public string GetDate(IPublishedContent Element, string DateAlias)
    {
        string Date;

        if (Element.HasValue(DateAlias))

        {
            try
            {
                Date = Element.Value<DateTime>(DateAlias).ToLongDateString();

            }
            catch (Exception)
            {
                //Date = new DateTime().AddYears(2000).ToLongDateString();
                Date = "";

            }

        }
        else
        {
            Date = "";



        }


        return Date;
    } }
