@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using ContentModels = Umbraco.Web.PublishedModels;
@using Umbraco.Web.Models
@{
    Layout = "_InnerPagesLayout.cshtml";

    var language = Umbraco.AssignedContentItem.GetCultureFromDomains();
    var readMore = (language == "ar-SA") ? "المزيد عن الخدمة" : "Read More";


    var Services = Umbraco.AssignedContentItem.Root().ChildrenOfType("eServices").First().ChildrenOfType("service").Where(c => c.IsVisible());
}



    <section id="goals" class="goals lg-slider  mosque-goals all-services section-bg">
        <div class="container" data-aos="fade-up">

            <!-- <div class="section-title mt-20">

              <h3 data-aos="fade-up" class="line line-center text-center">الهدف الاستراتيجي</h3>
            </div> -->


            <div class="row mt-20">

                @if (Services != null)
                {
                    foreach (var item in Services.Where(x => x.IsVisible()))
                    {

                        var icon = item.Value<IPublishedContent>("iconimage");
                        var image = item.Value<IPublishedContent>("image");
                        var imageDescription = item.Value("imageAlt");

                        var description = item.Value<string>("description");
                        var textOfTitle = item.Value<string>("title");

                        var link = item.Value<Link>("linkTitle");

                        <div class="col-md-4 col-lg-4 d-flex align-items-stretch">
                            <div class="icon-box">
                                @if (icon != null)
                                {
                                    <div class="icon">
                                        <img src="@icon.Url()" alt="@icon.Name">
                                    </div>
                                }
                                else
                                {
                                    <div class="icon">
                                        <img alt="Book Icon"src="~/assets/images/BookIcon.svg">
                                    </div>
                                }
                                @if (textOfTitle != null && textOfTitle != "")
                                {
                                    <h4 class="title"><a href="@item.Url()">@textOfTitle</a></h4>
                                }
                                @*@if (description != null && description != "")
                                        {
                                    <p class="description">
                                        @description.StripHtml()
                                    </p>
                                        }*@


                                <a href="@item.Url()" class="more-details"> @readMore <i class="lni lni-chevron-left"></i> </a>
                            </div>
                        </div>

                    }
                }









            </div>

        </div>
    </section><!-- End About Section -->
